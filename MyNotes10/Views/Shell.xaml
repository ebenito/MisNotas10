                                <Canvas.RenderTransform>
                                    <CompositeTransform ScaleX="1.7" ScaleY="1.7" TranslateY="-20"/>
                                </Canvas.RenderTransform>
                                <Path Data="F1 M 2.08,9.6 L 34.08,9.6 34.08,60.8 2.08,60.8 z"  Fill="#ff373737" />
